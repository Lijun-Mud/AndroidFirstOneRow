<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.hb49417.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/list_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listview"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/list_view_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        app:layout_constraintLeft_toRightOf="@+id/list_view_button"
        android:layout_marginLeft="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_view_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/list_view_button"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/list_view_recycler_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycler"
        app:layout_constraintLeft_toRightOf="@+id/list_view_detail_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/list_view_detail_button"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_view_detail_button"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/list_item_recycler_chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyChat"
        app:layout_constraintLeft_toRightOf="@+id/list_view_recycler_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/list_view_recycler_button"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_view_recycler_button"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/fragment_dynamic_load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/list_view_button" />

    <Button
        android:id="@+id/fragment_all_size_news_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AllSize"
        app:layout_constraintLeft_toRightOf="@+id/fragment_dynamic_load_button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/list_view_detail_button" />

    <Button
        android:id="@+id/broadcast_network_first_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_dynamic_load_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/broadcast_network_local_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_all_size_news_button"
        app:layout_constraintLeft_toRightOf="@+id/broadcast_network_first_button"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/file_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="OUTPUT"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/broadcast_network_first_button" />

    <Button
        android:id="@+id/share_data_content_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="@+id/file_main_button"
        app:layout_constraintLeft_toRightOf="@+id/file_main_button"
        app:layout_constraintTop_toTopOf="@+id/file_main_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/network_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="Network"
        app:layout_constraintBottom_toBottomOf="@+id/share_data_content_button"
        app:layout_constraintLeft_toRightOf="@+id/share_data_content_button"
        app:layout_constraintTop_toTopOf="@+id/share_data_content_button" />

</android.support.constraint.ConstraintLayout>
