<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hb49417.myapplication.sharedata.ShareDataActivity">

    <Button
        android:id="@+id/share_data_try_call_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Call"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/share_data_read_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="Contact"
        app:layout_constraintBottom_toBottomOf="@+id/share_data_try_call_button"
        app:layout_constraintLeft_toRightOf="@+id/share_data_try_call_button"
        app:layout_constraintTop_toTopOf="@+id/share_data_try_call_button" />

    <Button
        android:id="@+id/share_data_send_notify_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="Notify"
        app:layout_constraintBottom_toBottomOf="@+id/share_data_read_contact_button"
        app:layout_constraintTop_toTopOf="@+id/share_data_read_contact_button"
        app:layout_constraintLeft_toRightOf="@+id/share_data_read_contact_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/network_result_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:text=""
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/network_invoke_http_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Http"
        app:layout_constraintLeft_toRightOf="@+id/share_data_send_notify_button"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/share_data_send_notify_button"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/share_data_send_notify_button"
        android:layout_marginBottom="0dp" />
</android.support.constraint.ConstraintLayout>
