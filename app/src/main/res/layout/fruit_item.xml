<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fruit_item_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/fruit_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/fruit_item_imageView"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/fruit_item_imageView"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/fruit_item_imageView"
        android:layout_marginLeft="16dp" />
</android.support.constraint.ConstraintLayout>